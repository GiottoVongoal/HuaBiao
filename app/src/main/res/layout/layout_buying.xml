<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundwhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_buying_view" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="0dp"
                android:background="@color/black3" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="10dp"
                android:background="@color/black3" />

            <include layout="@layout/layout_buying_baseinfo" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="0dp"
                android:background="@color/black3" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="10dp"
                android:background="@color/black3" />

            <include layout="@layout/layout_buying_registerinfo" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="0dp"
                android:background="@color/black3" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="10dp"
                android:background="@color/black3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:text="商标服务列表"
                android:textSize="18dp" />

            <com.huabiao.aoiin.wedgit.MaxRecyclerView
                android:id="@+id/buying_recyclerview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="0dp"
                android:background="@color/black3" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="10dp"
                android:background="@color/black3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:text="公告与状态"
                android:textSize="18dp" />

            <com.huabiao.aoiin.wedgit.MaxRecyclerView
                android:id="@+id/buying_recyclerview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <View
                style="@style/GrayLine"
                android:layout_width="match_parent"
                android:layout_height="4dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buying1_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey_E9E7E7"
            android:padding="15dp"
            android:text="在线询价"
            android:textAlignment="center"
            android:textColor="@color/black3" />

        <View
            style="@style/GrayLine_shu"
            android:background="@color/black3" />

        <TextView
            android:id="@+id/buying2_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/grey_E9E7E7"
            android:padding="15dp"
            android:text="求购此标"
            android:textAlignment="center"
            android:textColor="@color/black3" />
    </LinearLayout>
</LinearLayout>
