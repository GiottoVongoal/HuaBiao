<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f8f8f8"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_buying_view" />

            <include layout="@layout/layout_buying_baseinfo" />


            <include layout="@layout/layout_buying_registerinfo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:drawableLeft="@mipmap/banyuan"
                android:drawablePadding="@dimen/x13"
                android:paddingTop="@dimen/x27"
                android:text="商标服务列表"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_18" />

            <com.huabiao.aoiin.wedgit.MaxRecyclerView
                android:id="@+id/buying_recyclerview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/x23" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:drawableLeft="@mipmap/banyuan"
                android:drawablePadding="@dimen/x13"
                android:paddingTop="@dimen/x27"
                android:text="公告与状态"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/buying_trademarkuseless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="商标无效"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_14" />

            <com.huabiao.aoiin.wedgit.MaxRecyclerView
                android:id="@+id/buying_recyclerview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/GrayLine"
            android:background="@color/black3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buying1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="15dp"
                android:text="在线询价"
                android:textAlignment="center"
                android:textColor="@color/black3" />

            <View style="@style/GrayLine_shu" />

            <TextView
                android:id="@+id/buying2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="15dp"
                android:text="求购此标"
                android:textAlignment="center"
                android:textColor="@color/black3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
