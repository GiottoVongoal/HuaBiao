<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f8f8f8"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pay_info_detail_orderid_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="订单编号:xxx" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pay_info_detail_traderl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/pay_info_detail_trade_logo_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logobg" />

                <TextView
                    android:id="@+id/pay_info_detail_tradename_top_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/pay_info_detail_trade_logo_iv"
                    android:text="海飞丝"
                    android:textColor="@color/black3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pay_info_detail_register_type_top_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/pay_info_detail_tradename_top_tv"
                    android:layout_below="@+id/pay_info_detail_tradename_top_tv"
                    android:layout_marginTop="10dp"
                    android:text="01-日化用品" />

                <View
                    android:id="@+id/pay_info_detail_line1"
                    style="@style/GrayLine"
                    android:layout_below="@+id/pay_info_detail_trade_logo_iv"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/pay_info_detail_tradetype_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_line1"
                    android:layout_marginTop="10dp"
                    android:text="商标类型：注册+预审+退费担保" />

                <TextView
                    android:id="@+id/pay_info_detail_tradename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_tradetype_tv"
                    android:layout_marginTop="10dp"
                    android:text="商标名称：海飞丝" />

                <TextView
                    android:id="@+id/pay_info_detail_register_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_tradename_tv"
                    android:layout_marginTop="10dp"
                    android:text="注册类别：41类教育娱文、文体活动" />

                <TextView
                    android:id="@+id/pay_info_detail_order_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_register_type_tv"
                    android:layout_marginTop="10dp"
                    android:text="订单日期：2017-07-31" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="开具发票" />

                <com.sevenheaven.iosswitch.ShSwitchView
                    android:id="@+id/pay_info_detail_switch_view"
                    android:layout_width="50dip"
                    android:layout_height="35dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    shSwitch:shadowSpace="7dip"
                    shSwitch:tintColor="@color/yellow_fdd400" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pay_info_detail_invoice_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/pay_info_detail_invoice_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票类型：纸质发票" />

                <TextView
                    android:id="@+id/pay_info_detail_invoice_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_invoice_type_tv"
                    android:layout_marginTop="10dp"
                    android:text="发票内容：明细" />

                <TextView
                    android:id="@+id/pay_info_detail_invoice_header_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_invoice_content_tv"
                    android:layout_marginTop="10dp"
                    android:text="发票抬头：" />

                <RadioGroup
                    android:id="@+id/pay_info_detail_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/pay_info_detail_invoice_header_tv"
                    android:layout_toEndOf="@+id/pay_info_detail_invoice_header_tv"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pay_info_detail_personal_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkbox_select_type"
                        android:text="个人" />

                    <RadioButton
                        android:id="@+id/pay_info_detail_company_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/checkbox_select_type"
                        android:text="公司" />

                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pay_info_detail_invoice_header_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_invoice_header_tv"
                    android:layout_marginTop="5dp"
                    app:hintAnimationEnabled="true">

                    <EditText
                        style="@style/edittext_no_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="发票抬头"
                        android:inputType="text"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pay_info_detail_invoice_dutynum_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_info_detail_invoice_header_et"
                    android:layout_marginTop="5dp"
                    app:hintAnimationEnabled="true">

                    <EditText
                        style="@style/edittext_no_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="纳税人识别号"
                        android:inputType="text"
                        android:textSize="14sp" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/pay_info_detail_invoice_dutynum_tip_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/pay_info_detail_invoice_dutynum_et"
                    android:layout_margin="5dp"
                    android:src="@mipmap/notice_iv" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/pay_info_detail_pay_way_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <RadioButton
                    android:id="@+id/pay_info_detail_pay_wechat_rb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/checkbox_select_type"
                    android:text="微信支付"
                    android:textColor="@color/black3" />

                <RadioButton
                    android:id="@+id/pay_info_detail_pay_alipay_rb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableRight="@drawable/checkbox_select_type"
                    android:text="支付宝支付"
                    android:textColor="@color/black3" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <View style="@style/GrayLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_info_detail_pay_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:gravity="center"
            android:padding="15dp"
            android:text="实付款：¥ 5000.00" />


        <TextView
            android:id="@+id/pay_info_detail_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/yellow_fdd400"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="立即支付" />
    </LinearLayout>
</LinearLayout>