<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_f8f8f8"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/grey_DDDDDD" />

        <ImageView
            android:id="@+id/user_progress_date_item_spot_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@mipmap/point_gray"
            android:scaleType="fitXY"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x40"
        android:layout_marginRight="@dimen/x110"
        android:background="@drawable/bg_round_white"
        android:paddingLeft="@dimen/x20">

        <TextView
            android:id="@+id/user_progress_date_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x28"
            android:text="time"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/user_progress_date_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_progress_date_item_time_tv"
            android:layout_marginBottom="@dimen/x40"
            android:layout_marginTop="@dimen/x21"
            android:text="content"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_14" />

        <com.ywy.mylibs.wedgit.wedgit.CircleView
            android:id="@+id/user_progress_date_item_right_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x32"
            android:background="@mipmap/touxiang" />
    </RelativeLayout>
</LinearLayout>