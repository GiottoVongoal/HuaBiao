<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mall_listitem_imageView"
        android:layout_width="@dimen/x159"
        android:layout_height="@dimen/x159"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginTop="@dimen/x18"
        android:scaleType="centerCrop"
        android:src="@mipmap/logobg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x19"
        android:layout_toRightOf="@+id/mall_listitem_imageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mall_contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x18"
            android:text="abb"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/mall_classficationid_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x16"
            android:text="分类"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/mall_register_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="注册号"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/mall_applicantTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="申请人"
            android:textColor="#888888"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <View
        android:id="@+id/mall_listitem_line"
        style="@style/GrayLine"
        android:layout_below="@+id/mall_listitem_imageView"
        android:layout_marginTop="@dimen/x41"
        android:background="@color/grey_DDDDDD" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x82"
        android:orientation="horizontal"
        android:layout_below="@id/mall_listitem_line">

        <ImageView
            android:id="@+id/mall_status_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x29"
            android:layout_marginTop="@dimen/x18"
            android:src="@mipmap/chenggong" />

        <TextView
            android:id="@+id/show_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="aaa"
            android:textColor="#888888"
            android:textSize="@dimen/text_size_11" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/mall_listitem_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginRight="@dimen/x37"
            android:background="@mipmap/jindu_weixuan"
            android:text="求购"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/mall_listitem_Cybersquatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginRight="@dimen/x37"
            android:background="@mipmap/jindu_weixuan"
            android:text="抢注"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="#848484"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/mall_listitem_yiyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jindu_weixuan"
            android:layout_marginRight="@dimen/x162"
            android:layout_marginTop="10dp"
            android:text="异议"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/mall_listitem_Cybersquatting"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_11" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
