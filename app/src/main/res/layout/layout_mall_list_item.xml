<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mall_listitem_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mall_listitem_imageView"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/mall_contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abb"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mall_register_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="注册号"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/mall_applicantTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="申请人" />


    </LinearLayout>

    <TextView
        android:id="@+id/mall_classficationid_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_listitem_imageView"
        android:layout_marginLeft="10dp"
        android:padding="9dp"
        android:text="分类"
        android:textSize="15dp" />

    <View
        android:id="@+id/mall_listitem_line"
        style="@style/GrayLine"
        android:layout_below="@+id/mall_classficationid_TextView"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/mall_listitem_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:background="@mipmap/jindu_weixuan"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="求购" />

    <TextView
        android:id="@+id/mall_listitem_Cybersquatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:background="@mipmap/jindu_weixuan"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="抢注"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/mall_listitem_yiyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mall_listitem_buy"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/mall_listitem_buy"
        android:background="@mipmap/jindu_weixuan"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="异议"
        android:visibility="gone" />


    <TextView
        android:id="@+id/show_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_classficationid_TextView"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawablePadding="5dp"
        android:padding="15dp"
        android:text="aaa" />
</RelativeLayout>
