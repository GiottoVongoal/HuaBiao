<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="求购"
        android:layout_below="@+id/mall_listitem_imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/show_TextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/button"
     />

    <TextView
        android:id="@+id/mall_contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mall_register_number"
        android:layout_below="@+id/mall_contentTextView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mall_applicantTextview"
        android:layout_below="@+id/mall_register_number"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mall_classficationid_TextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mall_applicantTextview"
        />

    <ImageView
        android:id="@+id/mall_listitem_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
