<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mall_listitem_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x19"
        android:paddingTop="@dimen/x22">

        <com.huabiao.aoiin.wedgit.XCRoundRectImageView
            android:id="@+id/mall_listitem_imageView"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x36"
            android:scaleType="centerCrop"
            android:src="@mipmap/logobg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x19"
            android:layout_toRightOf="@+id/mall_listitem_imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mall_contentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abb"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/mall_classficationid_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x13"
                android:text="分类"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/mall_register_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:text="注册号"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/mall_applicantTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x14"
                android:text="申请人"
                android:textColor="#888888"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/mall_listitem_line"
        style="@style/GrayLine"
        android:background="@color/grey_DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x82"
        android:layout_below="@id/mall_listitem_line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mall_status_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x29"
            android:layout_marginTop="@dimen/x18"
            android:src="@mipmap/chenggong" />

        <TextView
            android:id="@+id/show_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:text="aaa"
            android:textColor="#888888"
            android:textSize="@dimen/text_size_11" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mall_listitem_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x37"
                android:background="@mipmap/jindu_weixuan"
                android:gravity="center"
                android:text="求购"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/mall_listitem_Cybersquatting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x37"
                android:background="@mipmap/jindu_weixuan"
                android:gravity="center"
                android:text="抢注"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/mall_listitem_yiyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x37"
                android:background="@mipmap/jindu_weixuan"
                android:gravity="center"
                android:text="异议"
                android:textSize="@dimen/text_size_11" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/GrayLine"
        android:layout_height="@dimen/x18"
        android:background="@color/grey_f8f8f8" />
</LinearLayout>
