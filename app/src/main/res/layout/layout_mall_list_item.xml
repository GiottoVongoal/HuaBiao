<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mall_listitem_imageView"
        android:layout_width="@dimen/x159"
        android:layout_height="@dimen/x159"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/x18"
        android:layout_marginLeft="@dimen/x36"
        android:scaleType="centerCrop"
        android:src="@mipmap/logobg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mall_listitem_imageView"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x19"
       >

        <TextView
            android:id="@+id/mall_contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abb"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/x18"
            android:textSize="@dimen/x32" />
        <TextView
            android:id="@+id/mall_classficationid_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x9"
            android:textColor="#333333"
            android:text="分类"
            android:textSize="@dimen/x23"
            />

        <TextView
            android:id="@+id/mall_register_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="注册号"
            android:textSize="@dimen/x23"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/mall_applicantTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:textSize="@dimen/x23"
            android:textColor="#888888"
            android:text="申请人" />

    </LinearLayout>

    <View
        android:id="@+id/mall_listitem_line"
        style="@style/GrayLine"
        android:layout_height="@dimen/x1"
        android:layout_width="@dimen/x682"
        android:background="@color/grey_DDDDDD"
        android:layout_below="@+id/mall_listitem_imageView"
        android:layout_marginTop="@dimen/x41"
        />

    <TextView
        android:id="@+id/mall_listitem_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:background="@mipmap/jindu_weixuan"
        android:layout_marginRight="@dimen/x37"
        android:textSize="@dimen/x22"
        android:text="求购"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/mall_listitem_Cybersquatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:background="@mipmap/jindu_weixuan"
        android:layout_marginRight="@dimen/x37"
        android:text="抢注"
        android:textColor="#848484"
        android:textSize="@dimen/x22"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/mall_listitem_yiyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mall_listitem_buy"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/mall_listitem_buy"
        android:background="@mipmap/jindu_weixuan"
        android:text="异议"
        android:textSize="@dimen/x22"
        android:textAlignment="center"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mall_status_img"
        android:layout_below="@+id/mall_listitem_line"
        android:src="@mipmap/chenggong"
        android:layout_marginBottom="@dimen/x18"
        android:layout_marginTop="@dimen/x18"
        android:layout_marginLeft="@dimen/x29"
        />

    <TextView
        android:id="@+id/show_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x5"
        android:text="aaa"
        android:textSize="@dimen/x21"
        android:textColor="#888888"
        android:layout_alignBottom="@+id/mall_status_img"
       android:layout_toRightOf="@+id/mall_status_img"/>

</RelativeLayout>
