<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mall_listitem_imageView"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/mall_contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abb"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mall_register_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa" />

        <TextView
            android:id="@+id/mall_applicantTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa" />

        <TextView
            android:id="@+id/mall_classficationid_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa" />
    </LinearLayout>


    <ImageView
        android:id="@+id/mall_listitem_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <View
        android:id="@+id/mall_listitem_line"
        style="@style/GrayLine"
        android:layout_below="@+id/mall_listitem_imageView"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/mall_listitem_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:background="@drawable/bg_round_gray"
        android:padding="15dp"
        android:text="求购" />

    <TextView
        android:id="@+id/mall_listitem_Cybersquatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:background="@drawable/bg_round_gray"
        android:padding="15dp"
        android:text="抢注" />

    <TextView
        android:id="@+id/mall_listitem_yiyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mall_listitem_buy"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/mall_listitem_buy"
        android:background="@drawable/bg_round_gray"
        android:padding="15dp"
        android:text="异议"
        android:visibility="gone" />


    <TextView
        android:id="@+id/show_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mall_listitem_line"
        android:layout_margin="10dp"
        android:drawableLeft="@mipmap/common_nav_icon_sq"
        android:drawablePadding="5dp"
        android:padding="15dp"
        android:text="aaa" />
</RelativeLayout>
