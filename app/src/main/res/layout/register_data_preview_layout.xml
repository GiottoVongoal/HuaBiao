<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/view_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="商标基本信息"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_16" />

                <View
                    style="@style/GrayLine"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x110"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册商标"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/register_data_preview_tradename_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View style="@style/GrayLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x96"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分类"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/register_data_preview_tradetype_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <View style="@style/GrayLine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="注册类别"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/register_data_preview_classification_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x34" />

                <View
                    style="@style/GrayLine"
                    android:layout_marginTop="@dimen/x20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="热度指数"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_16" />

                <com.huabiao.aoiin.wedgit.DrawLineChartView
                    android:id="@+id/register_data_preview_linechart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x43"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="联系方式"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/register_data_preview_username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="客户姓名" />

                <TextView
                    android:id="@+id/register_data_preview_userphone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="联系电话" />

                <TextView
                    android:id="@+id/register_data_preview_contract_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="合同地址" />

                <TextView
                    android:id="@+id/register_data_preview_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="邮政编码" />

                <View
                    style="@style/GrayLine"
                    android:layout_marginTop="@dimen/x30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="申请人类型"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/register_data_preview_person_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:background="@drawable/bg_round_black3"
                    android:padding="5dp"
                    android:text="类型" />

                <TextView
                    android:id="@+id/register_data_preview_person_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="申请人姓名" />

                <TextView
                    android:id="@+id/register_data_preview_legal_or_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="法人姓名/ID" />

                <TextView
                    android:id="@+id/register_data_preview_person_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="地址" />

                <LinearLayout
                    android:id="@+id/register_data_preview_logo_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        style="@style/GrayLine"
                        android:layout_marginTop="@dimen/x30" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x30"
                        android:text="资料提交"
                        android:textColor="@color/black3"
                        android:textSize="@dimen/text_size_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x30"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/register_data_preview_trade_logo_iv"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/logobg"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="商标图样" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/register_data_preview_proxy_iv"
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:background="@mipmap/logobg"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="委托书+公章" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x30"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/register_data_preview_business_licence_iv"
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/logobg"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:text="营业执照+空白处盖公章" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/GrayLine"
                    android:layout_marginTop="@dimen/x30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="服务方式"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/register_data_preview_service_mode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:paddingBottom="@dimen/x30"
                    android:text="方式" />
            </LinearLayout>
        </ScrollView>

        <View style="@style/GrayLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x95"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_data_preview_back_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:textColor="@color/black3"
                android:text="编辑" />

            <View
                style="@style/GrayLine_shu"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10" />

            <TextView
                android:id="@+id/register_data_preview_commit_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black3"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="立即申请" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>