<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/backgroundwhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="相关分类"
                android:textSize="20sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_result_unregistered_relevant_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/GrayLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="其他分类"
                android:textSize="20sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_result_unregistered_other_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/GrayLine" />

            <com.huabiao.aoiin.wedgit.DrawLineChartView
                android:id="@+id/search_result_unregistered_line_chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white" />
        </LinearLayout>
    </ScrollView>

    <View style="@style/GrayLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_result_unregistered_register_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="注册"
            android:textSize="17sp" />

        <View style="@style/GrayLine_shu" />

        <TextView
            android:id="@+id/search_result_unregistered_collection_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="收藏"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>