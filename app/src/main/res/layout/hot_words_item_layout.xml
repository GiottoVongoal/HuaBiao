<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x500"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/x20"
    android:layout_marginLeft="@dimen/x18"
    android:layout_marginRight="@dimen/x18"
    android:background="@drawable/bg_round_white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x28">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热搜词:"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/hot_words_item_top_tv"
            style="@style/title_tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/hot_words_item_industrytype_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x18"
        android:background="@mipmap/jindu_weixuan"
        android:gravity="center"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:textColor="@color/black3"
        android:textSize="@dimen/text_size_10" />

    <com.huabiao.aoiin.wedgit.DrawLineChartView
        android:id="@+id/hot_words_item_line_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hot_words_item_means_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lineSpacingExtra="@dimen/x14"
        android:padding="@dimen/x27"
        android:textColor="@color/black3"
        android:textSize="@dimen/text_size_11" />
</LinearLayout>