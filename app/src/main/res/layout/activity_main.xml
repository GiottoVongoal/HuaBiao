<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/botton_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/botton_navi_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:itemTextColor="@color/black3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation" />
    <!--app:itemIconTint="@color/seletor_bottom_navi"-->

    <View
        style="@style/GrayLine"  />

    <RadioGroup
        android:id="@+id/home_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <RadioButton
            android:id="@+id/home_shouye_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/x6"
            android:drawableTop="@drawable/ic_main_shouye"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/grey_8E8E8E" />

        <RadioButton
            android:id="@+id/home_mall_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/x6"
            android:drawableTop="@drawable/ic_main_mall"
            android:gravity="center"
            android:text="商城"
            android:textColor="@color/grey_8E8E8E" />

        <RadioButton
            android:id="@+id/home_finance_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/x6"
            android:drawableTop="@drawable/ic_main_finance"
            android:gravity="center"
            android:text="金融"
            android:textColor="@color/grey_8E8E8E" />

        <RadioButton
            android:id="@+id/home_me_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/x6"
            android:drawableTop="@drawable/ic_main_me"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/grey_8E8E8E" />
    </RadioGroup>
</LinearLayout>