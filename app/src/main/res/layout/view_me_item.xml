<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/table_geren"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x108"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:id="@+id/view_me_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/view_me_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/view_me_left_iv"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/view_me_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view_me_right_iv"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/view_me_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/jiantou_right" />
    </RelativeLayout>

    <View
        android:id="@+id/view_geren"
        style="@style/GrayLine"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_f8f8f8">

        <TextView
            android:id="@+id/view_bottom_height"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>