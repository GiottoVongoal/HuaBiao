<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_card_four_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="资料提交" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/register_card_four_trade_logo_iv"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/register_card_four_proxy_iv"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/register_card_four_proxy_iv"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:text="商标图样"
            app:layout_constraintLeft_toLeftOf="@+id/register_card_four_trade_logo_iv"
            app:layout_constraintRight_toRightOf="@+id/register_card_four_trade_logo_iv"
            app:layout_constraintTop_toBottomOf="@+id/register_card_four_trade_logo_iv" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:text="委托书+公章"
            app:layout_constraintLeft_toLeftOf="@+id/register_card_four_proxy_iv"
            app:layout_constraintRight_toRightOf="@+id/register_card_four_proxy_iv"
            app:layout_constraintTop_toBottomOf="@+id/register_card_four_proxy_iv" />

        <ImageView
            android:id="@+id/register_card_four_business_licence_iv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:text="营业执照+空白处盖公章"
            app:layout_constraintLeft_toLeftOf="@+id/register_card_four_business_licence_iv"
            app:layout_constraintRight_toRightOf="@+id/register_card_four_business_licence_iv"
            app:layout_constraintTop_toBottomOf="@+id/register_card_four_business_licence_iv" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/register_card_four_next_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_round_gray"
        android:gravity="center"
        android:padding="10dp"
        android:text="下一步" />
</LinearLayout>