<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/register_one_finish_dialog_ll"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/register_one_finish_dialog_default_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/register_one_finish_dialog_default_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/touxiang" />

            <TextView
                android:id="@+id/register_one_finish_dialog_default_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_one_finish_dialog_default_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="默认注册" />
        </RelativeLayout>

        <View style="@style/GrayLine_shu" />

        <RelativeLayout
            android:id="@+id/register_one_finish_dialog_recommand_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/register_one_finish_dialog_recommand_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/touxiang" />

            <TextView
                android:id="@+id/register_one_finish_dialog_recommand_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_one_finish_dialog_recommand_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="客服推荐" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>