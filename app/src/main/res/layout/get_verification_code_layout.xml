<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x73"
        android:layout_marginRight="@dimen/x73"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="true">

            <EditText
                style="@style/edittext_no_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/iv_delete_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_getcode"
            android:src="@mipmap/login_edit_delete"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x40"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/grey_848484" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_delete_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:src="@mipmap/login_edit_delete"
            android:visibility="invisible" />


        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x150"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginTop="@dimen/x50"
        android:background="@mipmap/btn_yellow"
        android:gravity="center"
        android:text="登陆"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>