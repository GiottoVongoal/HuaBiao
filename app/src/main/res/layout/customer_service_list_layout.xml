<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/backgroundwhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/customer_service_list_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@mipmap/back_cut" />

        <EditText
            android:id="@+id/customer_service_list_search_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_white"
            android:drawableEnd="@mipmap/star_pre"
            android:hint="输入客服名字、公司查询"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_service_list_all_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="综合" />

        <View style="@style/GrayLine_shu" />

        <TextView
            android:id="@+id/customer_service_list_success_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成功率" />

        <View style="@style/GrayLine_shu" />

        <TextView
            android:id="@+id/customer_service_list_time_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册时间" />

        <View style="@style/GrayLine_shu" />

        <TextView
            android:id="@+id/customer_service_list_service_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="服务" />
    </LinearLayout>

    <View style="@style/GrayLine" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/customer_service_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>