<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/include2"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">
        <!--TextInputLayout的颜色来自style中的colorAccent的颜色-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/search_tradename_tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:theme="@style/TextInputLayoutLineColor"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/hintAppearance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                style="@style/edittext_no_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商标名"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
        <!--TextInputLayout的颜色来自style中的colorAccent的颜色-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/search_goodsname_tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:theme="@style/TextInputLayoutLineColor"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/hintAppearance"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_tradename_tl">

            <EditText
                style="@style/edittext_no_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品名"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/search_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_yellow"
            android:gravity="center"
            android:padding="15dp"
            android:text="查询" />
    </LinearLayout>
</RelativeLayout>