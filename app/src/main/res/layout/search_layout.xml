<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="查询"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:padding="20dp"
        app:cardCornerRadius="8dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--TextInputLayout的颜色来自style中的colorAccent的颜色-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/search_tradename_tl"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLayoutLineColor"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/hintAppearance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="商标名"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <!--TextInputLayout的颜色来自style中的colorAccent的颜色-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/search_goodsname_tl"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:theme="@style/TextInputLayoutLineColor"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/hintAppearance"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_tradename_tl">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="商品名"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/bg_sharp_circle"
                android:padding="25dp"
                android:text="查询"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_goodsname_tl" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>