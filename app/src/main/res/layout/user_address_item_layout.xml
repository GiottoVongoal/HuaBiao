<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/user_address_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_address_item_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/user_address_item_name_tv" />

    <TextView
        android:id="@+id/user_address_item_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_address_item_name_tv"
        android:layout_marginTop="10dp" />

    <View
        style="@style/GrayLine"
        android:layout_below="@+id/user_address_item_address_tv"
        android:background="@color/grey_848484"
        android:layout_marginTop="10dp" />
</RelativeLayout>