<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x154">

        <ImageView
            android:id="@+id/pledgercv_img"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x27"
            android:scaleType="fitXY"
            android:src="@mipmap/logobg" />

        <LinearLayout
            android:id="@+id/pledge_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/x42"
            android:layout_marginLeft="@dimen/x22"
            android:layout_toRightOf="@+id/pledgercv_img"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pledgercv_bankname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行名称"
                android:textColor="@color/black3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pledgercv_phonenumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x18"
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="@dimen/x8"
                android:text="手机号码"
                android:textColor="@color/black3"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/pledgercv_connect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x34"
            android:background="@mipmap/jindu_weixuan"
            android:gravity="center"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:text="立即联系"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/GrayLine" />
</LinearLayout>
