<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/myorders_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x72"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myorders_traderge_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/x35"
                android:drawableRight="@mipmap/jiantou_right"
                android:gravity="center"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/myorders_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/myorders_traderge_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x35"
                android:gravity="center"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_13" />
        </RelativeLayout>

        <View
            style="@style/GrayLine"
            android:layout_marginTop="@dimen/x6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20">

            <com.huabiao.aoiin.wedgit.XCRoundRectImageView
                android:id="@+id/myorders_listitem_imageView"
                android:layout_width="@dimen/x123"
                android:layout_height="@dimen/x123"
                android:layout_below="@+id/myorders_traderge_tv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:scaleType="centerCrop"
                android:src="@mipmap/logobg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x19"
                android:layout_marginTop="@dimen/x17"
                android:layout_toRightOf="@+id/myorders_listitem_imageView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myorders_tradename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/myorders_classfication_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/mall_listitem_line"
            style="@style/GrayLine"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20" />

        <TextView
            android:id="@+id/myorders_payshow_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x68"
            android:layout_marginRight="@dimen/x35"
            android:gravity="right|center_vertical"
            android:text="实付款"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/myorders_btn_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x84">

        <View style="@style/GrayLine" />

        <TextView
            android:id="@+id/myorders_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x19"
            android:layout_marginRight="@dimen/x28"
            android:background="@mipmap/red"
            android:gravity="center"
            android:text="付款"
            android:textColor="@color/red_dc1c1c"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/myorders_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:layout_toLeftOf="@+id/myorders_pay_tv"
            android:background="@mipmap/jindu_weixuan"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_11" />
    </RelativeLayout>

    <View
        style="@style/GrayLine"
        android:layout_height="@dimen/x18"
        android:background="@color/grey_f8f8f8" />
</LinearLayout>
