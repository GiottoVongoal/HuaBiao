<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x72"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myorders_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/myorders_traderge_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21dp"
                android:gravity="center"
                android:text="状态" />

            <TextView
                android:id="@+id/myorders_traderge_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:drawableRight="@mipmap/jiantou_right"
                android:gravity="center"
                android:text="海飞丝商标注册" />
        </RelativeLayout>

        <View
            style="@style/GrayLine"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/grey_E9E7E7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/myorders_listitem_imageView"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/x160"
                android:layout_below="@+id/myorders_traderge_tv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:scaleType="centerCrop"
                android:src="@mipmap/logobg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x25"
                android:layout_toRightOf="@+id/myorders_listitem_imageView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myorders_tradename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/myorders_classfication_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x40"
                    android:layout_marginTop="@dimen/x20"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/mall_listitem_line"
        style="@style/GrayLine"
        android:background="@color/grey_DDDDDD" />

    <TextView
        android:id="@+id/myorders_payshow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x22"
        android:layout_marginRight="@dimen/x37"
        android:layout_marginTop="@dimen/x25"
        android:text="实付款" />

    <View
        style="@style/GrayLine"
        android:layout_marginTop="@dimen/x6"
        android:background="@color/grey_E9E7E7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/myorders_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x30"
            android:background="@mipmap/red"
            android:gravity="center"
            android:layout_marginRight="@dimen/x37"
            android:text="付款"
            android:textColor="#dc1c1c"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/myorders_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x30"
            android:layout_toLeftOf="@+id/myorders_pay_tv"
            android:background="@mipmap/jindu_weixuan"
            android:gravity="center"
            android:layout_marginRight="@dimen/x37"
            android:text="取消"
            android:textSize="@dimen/text_size_11" />
    </RelativeLayout>

    <View
        style="@style/GrayLine"
        android:layout_height="@dimen/x18"
        android:background="@color/grey_f8f8f8" />
</LinearLayout>
