<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_mall_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/back_cut" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_mall_search_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round_edittext_bg"
                android:drawableLeft="@mipmap/fangdajing"
                android:drawablePadding="@dimen/x25"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:maxLines="1"
                android:paddingLeft="@dimen/x29"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/search_mall_search_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:paddingRight="@dimen/x30"
                android:text="搜索" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/GrayLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录" />

        <TextView
            android:id="@+id/search_mall_history_search_clear_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="清空历史记录" />
    </RelativeLayout>

    <View style="@style/GrayLine" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_mall_history_search_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/search_mall_history_search_none_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="暂无历史记录"
        android:visibility="visible" />
</LinearLayout>