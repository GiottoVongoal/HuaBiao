<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/auctionrcv_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/logobg" />

        <LinearLayout
            android:id="@+id/auction_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/auctionrcv_connect_tv"
            android:layout_toRightOf="@+id/auctionrcv_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/auctionrcv_companyname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="公司名称"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/auctionrcv_phonenumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="联系方式："
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/auctionrcv_connect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x34"
            android:background="@mipmap/jindu_weixuan"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="立即联系"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/GrayLine" />
</LinearLayout>
