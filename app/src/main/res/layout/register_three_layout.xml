<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x65">

        <TextView
            style="@style/title_tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x56"
            android:text="服务方式" />

        <RadioGroup
            android:id="@+id/register_card_five_service_mode_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x56"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/register_card_five_general_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/checkbox_select_type"
                android:text="普通注册"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_15" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="@dimen/x35" />

            <RadioButton
                android:id="@+id/register_card_five_urgent_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x35"
                android:button="@null"
                android:drawableRight="@drawable/checkbox_select_type"
                android:text="加急注册"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_15" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="@dimen/x35" />

            <RadioButton
                android:id="@+id/register_card_five_guarantee_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x35"
                android:button="@null"
                android:drawableRight="@drawable/checkbox_select_type"
                android:text="注册 + 预审 + 退费担保"
                android:textColor="@color/black3"
                android:textSize="@dimen/text_size_15" />
        </RadioGroup>

        <View
            style="@style/GrayLine"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/register_card_five_total_cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/x95"
            android:text="总费用"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/x25"
            android:text="(注册不成功，翻倍全额退款)"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/register_card_five_finish_tv"
            style="@style/text_btn_style"
            android:layout_marginTop="@dimen/x265"
            android:text="确定" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x66"
            android:gravity="center"
            android:text="3/3"
            android:textColor="@color/black3" />
    </LinearLayout>
</LinearLayout>