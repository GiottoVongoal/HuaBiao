<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="商标基本信息" />

            <TextView
                android:id="@+id/register_card_one_tradename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="注册商标:海飞丝" />

            <TextView
                android:id="@+id/register_card_one_tradetype_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="分类:清洁" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="10dp"
                android:background="@color/grey_5000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可注册类别" />

                <TextView
                    android:id="@+id/register_card_one_classification_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="按类筛选 >" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/register_card_one_classification_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="10dp"
                android:background="@color/grey_5000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="热度指数" />

            <com.huabiao.aoiin.wedgit.DrawLineChartView
                android:id="@+id/register_card_one_linechart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/GrayLine"
                android:layout_marginTop="10dp"
                android:background="@color/grey_5000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="出处/释义" />

            <TextView
                android:id="@+id/register_card_one_meaning_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="如果你无法简洁的表达你的想法，那只说明你还不够了解它。" />

            <TextView
                android:id="@+id/register_card_one_next_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_round_gray"
                android:gravity="center"
                android:padding="10dp"
                android:text="下一步" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>