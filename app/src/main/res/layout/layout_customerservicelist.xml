<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customer_service_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_f8f8f8"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@mipmap/bg_icon2"
        android:orientation="vertical">

        <com.ywy.mylibs.wedgit.wedgit.CircleView
            android:id="@+id/customer_service_img"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x154"
            android:src="@mipmap/touxiang" />

        <TextView
            android:id="@+id/customer_service_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x10"
            android:text="name"
            android:textColor="@color/black3"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_service_company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x21"
            android:drawableLeft="@mipmap/dingwei"
            android:text="company"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/text_size_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            android:layout_marginTop="@dimen/x126"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_service_successrate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/customer_service_service_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x19"
                    android:text="成功率(%)"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <View style="@style/GrayLine_shu" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_successrate_rate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/customer_service_servicerate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x19"
                    android:text="评价(星)"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <View style="@style/GrayLine_shu" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_register_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/black3"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/customer_register_count_jian_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x19"
                    android:text="注册量(件)"
                    android:textColor="@color/grey_999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/customer_yuyin_tv"
            style="@style/text_btn_style"
            android:layout_width="@dimen/x473"
            android:layout_height="@dimen/x88"
            android:layout_marginTop="@dimen/x173"
            android:background="@mipmap/btn_yellow"
            android:gravity="center"
            android:text="语音" />
    </LinearLayout>
</RelativeLayout>