<resources>

    <style name="text_editStyle">
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_width">43dp</item>
        <item name="android:background">@mipmap/bg_verify</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_0090FF</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!-- 灰色的线 -->
    <style name="GrayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_DDDDDD</item>
    </style>
    <!-- 灰色的竖线 -->
    <style name="GrayLine_shu">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/grey_DDDDDD</item>
    </style>
    <!--屏幕底部弹出PopupWindow效果-->
    <style name="bottom_enter_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <!--推荐客服星级评分条-->
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/customer_service_ratingbar</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:stepSize">0.1</item>
    </style>
</resources>
