<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 灰色的线 -->
    <style name="GrayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:background">@color/grey_e1e1e1</item>
    </style>
    <!-- 灰色的竖线 -->
    <style name="GrayLine_shu">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/grey_e1e1e1</item>
    </style>
    <!--屏幕底部弹出PopupWindow效果-->
    <style name="bottom_enter_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <!--推荐客服星级评分条-->
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/customer_service_ratingbar</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:stepSize">0.1</item>
    </style>
    <!--按钮style-->
    <style name="text_btn_style">
        <item name="android:layout_width">@dimen/x534</item>
        <item name="android:layout_height">@dimen/x100</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black3</item>
        <item name="android:background">@mipmap/btn_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--设置EditText输入框背景为空白-->
    <style name="edittext_no_bg">
        <item name="android:background">@mipmap/edittext_bg_line</item>
        <item name="android:textColorHint">@color/grey_848484</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black3</item>
    </style>
    <!--TextInputLayout输入框的错误提示样式-->
    <style name="errorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red_ff0000</item>
    </style>

    <style name="counterOverflowTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red_ff0000</item>
    </style>
    <!--下拉筛选菜单-->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/dd_menu_in</item>
        <item name="android:windowExitAnimation">@anim/dd_menu_out</item>
    </style>
    <!--日历相关-->
    <declare-styleable name="WeekBarView">
        <attr name="week_text_color" format="color" />
        <attr name="week_text_size" format="integer" />
    </declare-styleable>
    <!---->
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer" />
        <attr name="rv_rippleDuration" format="integer" />
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0" />
            <enum name="doubleRipple" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />
    </declare-styleable>
</resources>
